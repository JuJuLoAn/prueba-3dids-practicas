    },
    {
      "type": "range",
      "id": "checkmark_width",
      "min": 1,
      "max": 3,
      "step": 1,
      "unit": "px",
      "label": "Checkmark thickness",
      "default": 2
    },
    {
      "type": "color",
      "id": "checkbox_background",
      "label": "Checkbox background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "checkbox_checked_background",
      "label": "Checked background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "checkbox_checked_border",
