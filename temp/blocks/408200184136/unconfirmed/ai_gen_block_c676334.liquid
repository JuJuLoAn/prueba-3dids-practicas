{% doc %}
  @prompt
    checkbox with text

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-checkbox-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: {{ block.settings.spacing }}px;
    margin: {{ block.settings.margin }}px 0;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-checkbox-input-{{ ai_gen_id }} {
    appearance: none;
    -webkit-appearance: none;
    width: {{ block.settings.checkbox_size }}px;
    height: {{ block.settings.checkbox_size }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.checkbox_border_radius }}px;
    background-color: {{ block.settings.checkbox_background }};
    cursor: pointer;
    position: relative;
    margin: 0;
    flex-shrink: 0;
    margin-top: 3px;
  }

  .ai-checkbox-input-{{ ai_gen_id }}:checked {
    background-color: {{ block.settings.checkbox_checked_background }};
    border-color: {{ block.settings.checkbox_checked_border }};
  }

  .ai-checkbox-input-{{ ai_gen_id }}:checked::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 40%;
    transform: translate(-50%, -50%) rotate(45deg);
    width: 25%;
    height: 50%;
    border-bottom: {{ block.settings.checkmark_width }}px solid {{ block.settings.checkmark_color }};
    border-right: {{ block.settings.checkmark_width }}px solid {{ block.settings.checkmark_color }};
  }

  .ai-checkbox-input-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.focus_color }};
    outline-offset: 2px;
  }

  .ai-checkbox-label-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
    cursor: pointer;
  }

  .ai-checkbox-label-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-checkbox-label-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-checkbox-wrapper-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | divided_by: 1.5 }}px;
      margin: {{ block.settings.margin | divided_by: 1.5 }}px 0;
    }
    
    .ai-checkbox-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | minus: 1 }}px;
    }
  }
{% endstyle %}

<div class="ai-checkbox-wrapper-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <input 
    type="checkbox" 
    id="ai-checkbox-{{ ai_gen_id }}" 
    name="ai-checkbox-{{ ai_gen_id }}" 
    class="ai-checkbox-input-{{ ai_gen_id }}"
    {% if block.settings.required %}required{% endif %}
    {% if block.settings.checked_by_default %}checked{% endif %}
  >
  <label for="ai-checkbox-{{ ai_gen_id }}" class="ai-checkbox-label-{{ ai_gen_id }}">
    {{ block.settings.text }}
  </label>
</div>

{% schema %}
