      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Padding",
      "default": 16
    },
    {
      "type": "range",
      "id": "margin",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Vertical margin",
      "default": 16
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Container corner radius",
      "default": 8
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f4f4f4"
    }
  ],
  "presets": [
    {
      "name": "Checkbox with Text"
    }
  ]
}
{% endschema %}