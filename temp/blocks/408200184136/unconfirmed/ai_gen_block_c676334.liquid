    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#000f9f"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link hover color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 8,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Space between checkbox and text",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding",
